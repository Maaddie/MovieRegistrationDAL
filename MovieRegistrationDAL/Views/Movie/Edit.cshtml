@model Movie

<h2>Edit @Model.Title</h2>

<form asp-action="edit" method="post">

    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" value="@Model.Title" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <label asp-for="Genre" class="control-label"></label>
    <input asp-for="Genre" class="form-control" value="@Model.Genre" />
    <span asp-validation-for="Genre" class="text-danger"></span>

    <label asp-for="Year" class="control-label"></label>
    <input asp-for="Year" class="form-control" value="@Model.Year" />
    <span asp-validation-for="Year" class="text-danger"></span>

    <label asp-for="Runtime" class="control-label"></label>
    <input asp-for="Runtime" class="form-control" value="@Model.Runtime" />
    <span asp-validation-for="Year" class="text-danger"></span>



    <!--You still have access to all of your usual HTML elements with data annotations-->

    <input type="submit" />
</form>

